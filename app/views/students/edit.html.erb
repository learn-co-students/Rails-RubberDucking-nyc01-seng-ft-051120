<h1>Edit Student<h1>

<% if flash[:student_errors] %>
  <% flash[:student_errors].each do |e|%>
    <p> <%= e %> <p>
    <% end %>
  <% end %>


<%= form_for @student do |f| %>
  <%=f.label :name %>
  <%=f.text_field :name %>

  <%=f.label :mod %>
  <%=f.number_field :mod%>

  <%=f.submit%>

  <% end %>
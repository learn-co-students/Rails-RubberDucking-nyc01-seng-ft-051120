<h1> Student Form</h1>

<% if flash[:student_errors] %>
  <% flash[:student_errors].each do |error| %>
  <p style="color: red"> <%= error %> </p>
  <% end %>
<% end %>

<%= form_for(@student) do |f| %>
  
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

    <%= f.label :mod %><br>
  <%= f.number_field :mod %><br>

  <%= f.submit%>
<% end %>
<h1>Create New Student</h1>
<% if flash[:student_errors] %>
<% flash[:student_errors].each do |error| %>
<p><%= error %></p>
<% end %>
<% end %>


<%= form_for @student do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>

<%= f.label :mod %>
<%= f.number_field :mod, in: 1..5 %>
<%= f.submit %>
<% end %>
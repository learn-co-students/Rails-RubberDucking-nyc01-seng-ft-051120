<h1>Edit <%= @duck.name%>!</h1>

<% if flash[:error] %>
<ul>
<% flash[:error].each do |error| %>
  <li><%= error %></li>
  <%end%>
  </ul>
<%end%>

<%= form_for @duck do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>

<%= f.label :description %>
<%= f.text_area :description %><br>

<%= f.collection_select :student_id, Student.all, :id, :name %><br>

<%=f.submit%>
<%end%>